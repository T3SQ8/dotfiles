#!/bin/sh

for file in "$@"; do
	basename=${file%.*}
	nameonly=${basename##*/}
	ext=${file##*.}
	case $ext in
		roff)	groff -e -ms "$file" -Tpdf > "$basename.pdf" ;;
		tex)	pdflatex -output-directory /tmp "$file" && cp "/tmp/$nameonly.pdf" "$basename.pdf" ;;
		md)	pandoc "$file" -o "$basename.html" ;;
		*)	echo "$file: Unknown filetype" ;;
	esac
done
