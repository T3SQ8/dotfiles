##########################
# WM INDEPENDENT HOTKEYS #
##########################

# Terminal emulator
super + Return
	$TERMINAL

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Application launcher
super + space
	dmenu_run

# Volume controls
{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
	amixer sset Master {5%+,5%-,0%}; refpanel

# Brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {-inc 10,-dec 10}

#################
# BSPWM HOTKEYS #
#################

# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Toggle monocle layout
super + f
	bspc desktop -l next

# Focus on the next/previous node in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.leaf.!hidden

# Swap nodes
super + {g, w}
	bspc node -s {biggest.local, pointed}

# Set window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# Resize window
super + {Left,Down,Up,Right}
	bspwm_resize {west, south, north, east}

# Node flags
super + {p, h}
	bspc node -g {sticky, hidden}

# Unhide windows
super + shift + h
	bspc node $(bspc query -N -n .hidden.local | tail -n1) -g hidden=off

# Rotate windows
super + {_,shift} r
	bspc node @focused:/ -R {_,-}90

# Close window
super + shift + q
	bspc node -k

# Focus the next/previous desktop in the current monitor
super + {Prior,Next}
	bspc desktop -f {prev,next}.local

# Focus on desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Send node to desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'
