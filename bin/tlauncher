#!/bin/bash

dmenu_options="dmenu -i -c -l 10"
gui_programs=("keepassxc" "pcmanfm" "chromium" "firefox")
terminal_programs=("vim" "ranger" "newsboat" "settings")

Choise=$(printf '%s\n' "${gui_programs[@]}" "${terminal_programs[@]}" | sort | $dmenu_options)
if [ $(printf '%s\n' "${gui_programs[@]}" | grep  $Choise) ]; then
	sh -c "$Choise" &
elif [ $Choise = "settings" ]; then
	settings
else
	st -e "$Choise" &
fi
