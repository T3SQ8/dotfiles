#!/bin/sh

# DWM panel script

{
	## Uptime
	#echo "ðŸ’»"
	#uptime --pretty | cut -d' ' -f2-


	# Date
	date "+ %b %d %R"
	echo ";"

	# Volume
	pamixer --get-volume --get-mute |
		awk '{
			if ($1 == "true")
				print "ï‹¢"
			else
				print "ðŸ”Š"
			print $2 "%"
		}'

	# Network
	awk '
	BEGIN {print "ðŸ“¶"}
	{
		if ($0 ~ /^up$/) {
			n=1
			exit
		}
	}
	END {
		if (n)
			print "ON"
		else
			print "OFF"
	}' /sys/class/net/*/operstate

	# Battery
	awk 'BEGIN {print "ðŸ”‹"} /Charging/ {printf "+"} /[0-9]/ {print $0 "%"}' \
		/sys/class/power_supply/BAT*/status /sys/class/power_supply/BAT*/capacity
} | tr '\n' ' '
