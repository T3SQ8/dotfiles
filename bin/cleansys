#!/bin/sh

if [ "$(whoami)" != "root" ]; then
	echo "Need root privileges"; exit
fi

pacman -Qi pacman-contrib > /dev/null || exit
echo "Generating mirrorlist..."
curl -s "https://www.archlinux.org/mirrorlist/?country=all&protocol=https&ip_version=4" | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors -n 10 - > /etc/pacman.d/mirrorlist

pacman -Syu
pacman -Qtdq | pacman -Rns -
pacman -Sc

journalctl --vacuum-size=50M
systemctl --failed
