#!/bin/bash

gui_programs=("keepassxc" "pcmanfm" "chromium" "firefox")
terminal_programs=("nvim" "ranger" "newsboat")

Choise=$(printf '%s\n' "${gui_programs[@]}" "${terminal_programs[@]}" | sort | dmenu -c -i -l 10)

if [[ "${gui_programs[*]}" =~ $Choise ]]; then
	sh -c "$Choise" &
elif [[ "${terminal_programs[*]}" =~ $Choise ]]; then
	$TERMINAL -e "$Choise" &
fi
