#!/bin/sh

# DWM panel script

{
	# Uptime
	echo " 💻"
	uptime --pretty | cut -d' ' -f2-

	# Date
	date "+🗓️ %b %d 🕒 %H:%M"

	# Volume
	pamixer --get-volume-human |
		awk '
		{print}
		BEGIN {print "🔊"}
		'

	# Network
	awk '
	BEGIN {print "📶"}
	{
		if ($0 ~ /^up$/) {
			n=1
			exit
		}
	}
	END {
		if (n)
			print "ON"
		else
			print "OFF"
	}' /sys/class/net/*/operstate

	# Battery
	awk 'BEGIN {print "🔋"} /Charging/ {printf "+"} /[0-9]/ {print $0 "%"}' \
		/sys/class/power_supply/BAT*/status /sys/class/power_supply/BAT*/capacity
} | tr '\n' ' '
