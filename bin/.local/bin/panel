#!/bin/sh

# DWM panel script

{
	echo ""

	## Uptime
	#echo "ğŸ’»"
	#uptime --pretty | cut -d' ' -f2-

	# Date
	date "+ğŸ—“ï¸ %b %d ğŸ•’ %R"

	# Volume
	pamixer --get-volume --get-mute |
		awk '{
			if ($1 == "true")
				print "ğŸ“³"
			else
				print "ğŸ”Š"
			print $2 "%"
		}'

	# Network
	awk '
	BEGIN {print "ğŸ“¶"}
	{
		if ($0 ~ /^up$/) {
			n=1
			exit
		}
	}
	END {
		if (n)
			print "ON"
		else
			print "OFF"
	}' /sys/class/net/*/operstate

	# Battery
	awk 'BEGIN {print "ğŸ”‹"} /Charging/ {printf "+"} /[0-9]/ {print $0 "%"}' \
		/sys/class/power_supply/BAT*/status /sys/class/power_supply/BAT*/capacity
} | tr '\n' ' '
