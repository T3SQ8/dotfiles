#!/bin/sh

[ "$(whoami)" != "root" ] && { echo "Root privileges needed"; exit ;}

alias \
	mount='mount -v' \
	umount='umount -v'

synconce() {
	[ "$synced" ] || { echo "Syncing..."; sync ; synced=1 ;}
}

checkmount(){
	grep -q "$mntdir" /proc/mounts
}

casemap() {
	[ ! -e "$device" ] && { echo "$device not found"; return ;}
	shortdev=${device##*/}
	mntdir="/mnt/$shortdev"
	mapper="/dev/mapper/$shortdev"

	case "$(blkid -o value -s TYPE "$device")" in
		crypto_LUKS)
			if ! checkmount; then
				cryptsetup open -v "$device" "$shortdev"
				mkdir -p "$mntdir"
				mount "$mapper" "$mntdir"
			else
				synconce
				umount "$device"
				rmdir "$mntdir"
				cryptsetup -v close "$shortdev"
			fi
			;;

		ext4|vfat)
			if ! checkmount; then
				mkdir -p "$mntdir"
				mount "$device" "$mntdir"
			else
				synconce
				umount "$device"
				rmdir "$mntdir"
			fi
			;;
		ntfs)
			if ! checkmount; then
				mkdir -p "$mntdir"
				ntfs-3g "$device" "$mntdir"
			else
				synconce
				umount "$device"
				rmdir "$mntdir"
			fi
			;;
		*)
			echo "Unknown partition type"; exit 1 ;;
	esac
}


if [ $# = 0 ]; then
	device=$(sfdisk -lqo Device,Size | sed -n 's/\s\+/\t/;/dev/p' | fzf | cut -f1)
	casemap
else
	for device in "$@"; do
		casemap
	done
fi
