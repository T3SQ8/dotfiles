#!/bin/sh

mntdir="$HOME/cell-mount"

[ "$(command -v simple-mtpfs fusermount | wc -l)" -ne 2 ] && exit

echo "1. Mount device"
echo "2. Unmount device"
printf "What do you want to do? "; read -r choice

case $choice in
	1)
		simple-mtpfs -l || exit
		printf "Which device to you want to mount? "; read -r device
		mkdir "$mntdir"
		simple-mtpfs --device "$device" "$mntdir"
		;;
	2)
		fusermount -u "$mntdir"
		rmdir "$mntdir"
		;;
esac
