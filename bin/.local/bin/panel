#!/bin/sh

{
	# Uptime
	echo " ğŸ’»"
	uptime --pretty | cut -d' ' -f2-

	# Newsboat
	echo "ğŸ“°"
	cat /tmp/newslist || echo 0

	# Date
	date "+ğŸ—“ï¸ %b %d ğŸ•’ %H:%M"

	# Volume
	amixer get Master |
		awk -F '[][]' '
		BEGIN {print "ğŸ”Š"}
		/[0-9]{1,3}%/ {
			print $2
		}
		/\[off]/ {
			print "(M)"
		}'

	# Network
	awk '
	BEGIN {print "ğŸ“¶"}
	{
		if ($0 ~ /^up$/) {
			n=1
			exit
		}
	}
	END {
		if (n)
			print "ON"
		else
			print "OFF"
	}' /sys/class/net/*/operstate

	# Battery
	awk 'BEGIN {print "ğŸ”‹"} /Charging/ {printf "+"} /[0-9]/ {print $0 "%"}' \
		/sys/class/power_supply/BAT*/status /sys/class/power_supply/BAT*/capacity
} | tr '\n' ' '
