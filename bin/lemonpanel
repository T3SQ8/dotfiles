#!/bin/sh

Font="Liberation Mono:pixelsize=11:antialias=true:autohint=true"
Underline_color=#268bd2
Underline_size=2
Foreground_color=#eee8d5
Geometry=x24
if [ "$(cat /sys/class/power_supply/BAT*/capacity)" -le 15 ];then
	Background_color=#ff0000
else
	Background_color=#073642
fi

Clock() {
	date "+%b %d %H:%M"
}

Battery() {
	Battery_precentage=$(cat /sys/class/power_supply/BAT*/capacity)
	if [ "$(cat /sys/class/power_supply/BAT*/status)" = "Charging" ]; then
		echo "BAT:+$Battery_precentage%"
	else
		echo "BAT:$Battery_precentage%"
	fi
}

Internet() {
	cat /sys/class/net/*/operstate | grep -q up && Connection="ON" || Connection="OFF"
	echo "INT: $Connection"
}

Desktop() {
	bspc query -D -d focused --names
}

Volume() {
	echo "VOL: $(amixer get Master | awk -F"[][]" '/dB/ { print $2 }')"
}

Result() {
	while true; do
		echo "%{+u}%{l} $(Desktop) %{c}$(Clock)%{r}$(Volume) | $(Internet) | $(Battery) "
		sleep 10
	done
}

Result | lemonbar \
	-g "$Geometry" \
	-u "$Underline_size" \
	-U "$Underline_color" \
	-f "$Font" \
	-B "$Background_color" \
	-F "$Foreground_color"
