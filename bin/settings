#!/bin/sh

echo "
1. Brightness
2. Screen resolution
Choose an option:"

read -r Choise

echo ""
case $Choise in
	1)
		echo "Set brightness to?:"
		read -r Brightness
		xrandr --output "$(xrandr -q | grep connected | head -n 1 | cut -d ' ' -f1)" --brightness "$Brightness"
		;;
	2)
		xrandr | sed s/\ \ \ // | awk '{print$1;}' | grep x
		echo "Set the screen resolution to?:"
		read -r Resolution
		xrandr -s "$Resolution"
		;;
	*)
		echo "Invalid option"
esac
