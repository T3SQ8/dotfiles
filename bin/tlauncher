#!/bin/bash

dmenu_options="dmenu -i -c -l 10"
gui_programs=("keepassxc" "pcmanfm" "chromium" "firefox")
terminal_programs=("nvim" "ranger" "newsboat" "settings")

Choise=$(printf '%s\n' "${gui_programs[@]}" "${terminal_programs[@]}" | sort | $dmenu_options)

if [[ "${gui_programs[*]}" =~ $Choise ]]; then
	sh -c "$Choise" &
elif [[ "${terminal_programs[*]}" =~ $Choise ]]; then
	$TERMINAL -e "$Choise" &
fi
