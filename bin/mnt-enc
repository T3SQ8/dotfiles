#!/bin/sh

. mnt-sc
found cryptsetup
startmsg

case $choise in
	1)
		lsblk
		inputdev mount
		sudo cryptsetup luksOpen "/dev/$device" "$device" || exit 1
		mkmntdir
		sudo mount "/dev/mapper/$device" "$mntdir"
		;;
	2)
		lsblk | grep "crypt"
		inputdev unmount
		sudo umount "/dev/mapper/$device"
		sudo cryptsetup luksClose "$device"
		;;
esac
echo "Done"
