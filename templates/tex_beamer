\newcommand{\imagecolumn}[3][\textwidth]{
	\begin{columns}
		\begin{column}{.5\textwidth}
				#2
		\end{column}
		\begin{column}{.5\textwidth}
			\begin{center}
				\includegraphics[width=#1]{#3}
			\end{center}
		\end{column}
	\end{columns}
}

\newcommand{\bigimage}[1]{\includegraphics[width=\textwidth,height=\textheight,keepaspectratio]{#1}}

